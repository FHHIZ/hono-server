generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "windows"] // windows only
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id                String    @id @default(uuid())
  name              String    @unique
  email             String    @unique
  email_verified_at DateTime?
  password          String
  role              Role      @default(unregistered)
  student           Student?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Student {
  id       String     @id @default(uuid())
  user_id  String     @unique
  class_id String
  nis      Int
  absences Absence[]
  todos    TodoList[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  Users @relation(fields: [user_id], references: [id])
  class Class @relation(fields: [class_id], references: [id])
}

model Absence {
  id               String    @id @default(uuid())
  student_class_id String
  absence_time     DateTime? @default(now())
  status           Status    @default(unexcused)
  has_todo         Boolean   @default(false)

  student Student @relation(fields: [student_class_id], references: [id])
}

model TodoList {
  id               String   @id @default(uuid())
  student_class_id String
  activity         String
  createdAt        DateTime @default(now())

  student Student @relation(fields: [student_class_id], references: [id])
}

model Class {
  id           String     @id @default(uuid())
  classes      ClassGrade
  major        String
  academicYear String
  student      Student[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

enum Role {
  admin
  teacher
  student
  unregistered
}

enum Status {
  present
  onLeave
  ill
  unexcused
}

enum ClassGrade {
  X
  XI
  XII
}
